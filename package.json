{
  "name": "@sveltestack/svelte-query",
  "homepage": "https://github.com/SvelteStack/svelte-query",
  "private": false,
  "version": "2.0.0",
  "description": "Hooks for managing, caching and syncing asynchronous and remote data in Svelte",
  "keywords": [
    "svelte",
    "react-query"
  ],
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib",
    "svelte"
  ],
  "scripts": {
    "build": "rimraf ./dist && rollup -c",
    "prepublishOnly": "yarn run build",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "storybook": "cd storybook && npm run start",
    "build-storybook": "cd storybook && npm run build"
  },
  "dependencies": {
    "react-query": "^3.19.2",
    "svelte": "^3.42.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "esbuild": "^0.12.19",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "react-query": "^3.19.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.1",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.42.1",
    "svelte-check": "^2.2.4",
    "svelte-jester": "^1.8.2",
    "svelte-preprocess": "^4.7.4",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:ci"
    }
  }
}
